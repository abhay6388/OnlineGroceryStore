<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grocery Stote</title>
    <link href="~/css/Card.css" rel="stylesheet" />
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Bootstrap 5 JS Bundle (with Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!--Sweet Alert Linking-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    @RenderSection("head",false)

   
        <!-- Custom CSS -->
    <style>
        
        header{
            position: fixed;
            width:100%;
            top:0;
            right:0;
            z-index:1200;
            display:flex;
            justify-content:space-between;
            padding:20px 10%;
        }
        .navbar {
            display:flex;
            
            
        }
        .navbar .nav-link {
            color: #fff !important;
        }
        .navbar .nav-link:hover {
            color:brown !important;
        }
        .footer-container {
            display: flex;
            justify-content: space-between;
            padding: 20px;
            background-color: #343a40;
            color: #fff;
        }
        .footer-section h3, .footer-section ul, .footer-section li {
            margin: 0;
            padding: 0;
            list-style: none;
        }
        .footer-section ul li a {
            color: #adb5bd;
            text-decoration: none;
        }
        .footer-section ul li a:hover {
            color: #fff;
        }
        .socials a {
            margin-right: 15px;
            color: #fff;
        }
        .socials a:hover {
            color: #adb5bd;
        }
        .copyright {
            text-align: center;
            margin-top: 20px;
            color: #adb5bd;
        }
        @@media (max-width: 767px) {
            .footer-container {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }
        }

         /* Product Card Styling */
    .product-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color:darkslategrey;
    }

    /* Hover effect for the product card */
    .product-card:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        color:deepskyblue;
        background-color:lightpink;
    }

    /* Product Image Styling */
    .product-image {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin-bottom: 15px;
        transition: transform 0.3s ease;
    }

    /* Hover effect for the product image */
    .product-card:hover .product-image {
        transform: scale(1.1);
    }

    /* Button Styling */
    .btn-primary {
        background-color: turquoise;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color:palevioletred;
    }

    .btn-outline-success {
        border-color:fuchsia;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-outline-success:hover {
        background-color:mediumseagreen;
        color:black;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .product-card {
            margin-bottom: 20px;
        }
    }

    </style>
</head>
<body>




   <header>
         <!-- Navbar -->
         <nav class="navbar navbar-expand-lg navbar-dark">
             <div class="container">
                 <!-- Logo -->
                 <a href="#" class="navbar-brand">
                     <img src="~/image/logo.jpg" alt="Grocery Store Shop" width="100">
                 </a>

                 <!-- Toggle button for mobile -->
                 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                     <span class="navbar-toggler-icon"></span>
                 </button>

                 <!-- Navbar links and search bar -->
                 <div class="collapse navbar-collapse" id="navbarNav">
                     <ul class="navbar-nav me-auto">
                         <li class="nav-item">
                             <a class="nav-link active" asp-action="Index">Home</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link" asp-action="Shop">Shop</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link" href="#">Collections</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link" asp-action="Contact">Contact</a>
                         </li>
                     </ul>

                     <!-- Search bar -->
                     <form class="d-flex" role="search">
                         <input class="form-control me-2" type="search" placeholder="Search products..." aria-label="Search">
                         <button class="btn btn-outline-success" type="submit">Search</button>
                     </form>

                     <!-- Categories Dropdown -->
                     <div class="dropdown ms-3">
                         <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                             Categories
                         </button>
                         <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                             @RenderSection("Categories",false)
                         </ul>
                     </div>

                     <!-- Login button -->
                     <ul class="navbar-nav ms-3">
                         <li class="nav-item">
                             <a class="btn btn-danger"nav-link" asp-action="register" asp-controller="Website">Register</a>
                             <a class="btn btn-primary" nav-link" asp-action="Login">LoginForm</a>
                             <a class="btn btn-warning" nav-link" asp-action="AddToCard"><i class="bi bi-cart"></i></a>
                         </li>
                        
                     </ul>
                 </div>
             </div>
         </nav>
     </header>
     
     
     




    <br><br><br><br>
    
    <!-- Body Content -->
    <div class="row">
        <div class="col-sm-12">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="footer-section">
                <h3>COMPANY</h3>
                <ul>
                    <li><a href="#">About Lea</a></li>
                    <li><a href="#">Sustainability @@ Lea</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Terms & Conditions</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>ASSISTANCE</h3>
                <ul>
                    <li><a href="#">Shipping & Delivery</a></li>
                    <li><a href="#">Returns & Exchanges</a></li>
                    <li><a href="#">Account</a></li>
                    <li><a href="#">FAQs</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>CONTACT US</h3>
                <ul>
                    <li><a href="#">Email Us</a></li>
                    <li><a href="#">WhatsApp Us</a></li>
                    <li><a href="#">DM Us</a></li>
                    <li><a href="#">Others</a></li>
                </ul>
            </div>
        </div>
    </footer>

    @RenderSection("script", false)

   
</body>
</html>






                

            

        

            

       

       

    

