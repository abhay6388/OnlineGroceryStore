<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap Linking -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Font Awesome for Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <!-- Sweet Alert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @RenderSection("bootstrap",false)

    <link href="~/css/adminsheet.css" rel="stylesheet" />

    @RenderSection("style", false)
    @RenderSection("adminsheet",false)
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="#" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a asp-action="slider"><i class="fas fa-box"></i> Products</a>
        <a href="#"><i class="fas fa-users"></i> Users</a>
        <a asp-action="Category"><i class="fas fa-list"></i> Category</a>
        <a asp-action="Product"><i class="fas fa-box-open"></i> Manage Product</a>
        <a asp-action="Invoice"><i class="fas fa-receipt"></i> Invoice</a>
        <a href="#"><i class="fas fa-cogs"></i> Settings</a>
        <a asp-action="deletedUser"><i class="fas fa-trash-alt"></i> Deleted Users</a>
        <a asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container-fluid">

            <!-- Body Section -->
            <div class="row">
                <div class="col-sm-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap and Font Awesome Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>
