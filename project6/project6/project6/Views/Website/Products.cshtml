@model IEnumerable<project6.Models.product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_WebsiteLayout";
}
<h1 class="text-center my-4">All Products</h1>
<div class="container">
    <div class="row g-4">
        @foreach (var data in Model)

        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <img src="~/product/@data.image" style="height: 150px; object-fit: cover;" class="card-img-top" alt="@data.name" />
                    <div class="card-body">
                        <h5 class="card-title">@data.name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Price: $@data.price</h6>
                        <p class="card-text text-truncate" title="@data.description">
                            @data.description
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a class="btn btn-primary w-100" asp-action="ViewDetails">View Details</a>
					</div>
       
                </div>
            </div>
        }
    </div>
</div>
