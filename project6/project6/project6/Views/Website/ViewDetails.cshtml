@{
    Layout = "_WebsiteLayout";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grocery Product Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        /* Page Background */
        body {
          background-color: #f8f9fa;
          font-family: Arial, sans-serif;
        }

        /* Product Container */
        .product-container {
          max-width: 600px;
          margin: 50px auto;
          padding: 20px;
          border-radius: 10px;
          background-color: #fff;
          box-shadow: 0 5px 15px rgba(0,0,0,0.1);
          transition: transform 0.3s ease;
        }



        /* Product Image */
        .product-img {
        height:100px;
          width:100px;
          height: auto;
          border-radius: 10px;
          transition: transform 0.3s ease;
        }


        /* Product Title */
        .product-title {
          font-size: 1.8rem;
          font-weight: bold;
          color: #343a40;
          margin-top: 15px;
        }

        /* Product Price */
        .product-price {
          font-size: 1.4rem;
          color: #28a745;
          font-weight: bold;
          margin-top: 10px;
        }

        /* Buy & Add to Cart Buttons */
        .product-actions {
          display: flex;
          justify-content: space-between;
          margin-top: 20px;
        }

        .btn-buy, .btn-cart {
          width: 48%;
          padding: 10px;
          font-size: 1rem;
          font-weight: bold;
          border-radius: 5px;
        }

        .btn-buy {
          background-color: #ffc107;
          border: none;
          color: #fff;
        }

        .btn-buy:hover {
          background-color: #e0a800;
        }

        .btn-cart {
          background-color: #007bff;
          border: none;
          color: #fff;
        }

        .btn-cart:hover {
          background-color: #0056b3;
        }

        /* Media Queries for Responsiveness */
        @@media (max-width: 576px) {
          .product-container {
            padding: 15px;
          }

          .product-title {
            font-size: 1.5rem;
          }

          .product-price {
            font-size: 1.2rem;
          }

          .btn-buy, .btn-cart {
            font-size: 0.9rem;
            padding: 8px;
          }
        }
    </style>
</head>
<body>

    <!-- Product Page Container -->
    <div class="product-container text-center">
        <!-- Product Image -->
        <img src="./mae-mu-z8PEoNIlGlg-unsplash.jpg" alt="Grocery Item" class="product-img">

        <!-- Product Title -->
        <h2 class="product-title">Organic Apples</h2>

        <!-- Product Price -->
        <p class="product-price">$5.99 per lb</p>

        <!-- Action Buttons -->
        <div class="product-actions">
            <button class="btn btn-buy">Buy Now</button>
            <button class="btn btn-cart">Add to Cart</button>
        </div>
    </div>

    <!-- Bootstrap JS (Optional but useful for some Bootstrap features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>


